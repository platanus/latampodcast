<style>

.home-container {
  max-width: 680px;
  margin: 0 auto;
}

.top-nav {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.burger-button {
  margin-top: 20px;
  background: none;
  border: unset;
  height: 33px;
  width: 33px;
  display: flex;
  padding: 0;
  flex-direction: column;
  justify-content: space-evenly;
}

.burger-span {
  width: 33px;
  height: 4px;
  background-color: black;
  border-radius: 5px;
  display: block;
}

</style>

<div class="home-container">
  <nav class="top-nav">
    <div>
      <h1>LatamPodcast</h1>
      <p>Un simple listado con los mejores podcast latinoamericanos en espa√±ol.</p>
    </div>
    <div>
      <button class="burger-button">
        <span class="burger-span"></span>
        <span class="burger-span"></span>
      </button>
    </div>
  </nav>
  <%= @podcasts && @podcasts.each do |podcast| %>
    <div class="podcast-container">
      <img src="https://picsum.photos/200/300" alt="" height="30" width="30" />
      <div class="podcast-text-container">
        <h2><%= podcast.title %></h2>
        <p><%= podcast.description || 'Description' %></p>
        <div class="podcast-info-footer">
          <p><%= podcast.createdAt || 'n/a' %></p>
          <p><%= podcast.tag || '#Features' %></p>
        </div>
      </div>
    </div>
  <% end %>
  <%= @sections && @sections.each do |section| %>
    <h2> <%= section[:title] %> </h2>
    <p> <%= section[:subtitle] %> </p>
  <% end %>
  <%= @subsections && @subsections.each do |subsection| %>
    <h3> <%= subsection[:title] %> </h3>
    <p> <%= subsection[:subtitle] %> </p>
  <% end %>
</div>