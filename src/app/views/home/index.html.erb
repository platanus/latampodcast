<style>

h1, h2, h3, h4, h5 h6, p, span, div {
  word-break: break-word;
  color: #3a3b3c;
  font-family: 'LatoLatinWeb',Avenir,HelveticaNeue-Light,"Helvetica Neue Light","Helvetica Neue",Helvetica,Arial,"Lucida Grande",sans-serif;
}

.body-wrapper {
  margin: -10px;
  padding: 10px;
  background-color: rgb(236, 237, 239);
}

.home-container {
  max-width: 780px;
  margin: 0 auto;
}

.top-nav {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 10px;
}

.top-nav .title-wrapper {
  width: 100%;
  padding-left: 20px;
}

.top-nav .title-wrapper h1 {
  font-size: 2em;
}

.top-nav p.subtitle {
  text-align: center;
  color: #7a7b7c;
  font-size: 1.25em;
  margin-bottom: 25px;
}

.burger-button {
  margin-top: 20px;
  background: none;
  border: unset;
  height: 33px;
  width: 33px;
  display: flex;
  padding: 0;
  flex-direction: column;
  justify-content: space-evenly;
}

.burger-span {
  width: 33px;
  height: 4px;
  background-color: black;
  border-radius: 5px;
  display: block;
}

.podcast-wrapper {
  margin-bottom: 30px;
}

.podcast-wrapper-hover {
  transform: translate(0, -5px);
}

.podcast-wrapper a {
  text-decoration: none;
}

.podcast-wrapper > a:nth-child(even){
  margin: 20px 0;
}

.podcast-container {
  display: flex;
  align-items: flex-start;
  max-height: 270px;
  box-shadow: 0px 0px 10px 4px #e6e6e6;
  border: 1px solid #e6e6e6;
  background-color: white;
}

.podcast-container img {
  height: 100%;
  width: 270px;
}

.podcast-text-container {
  height: 230px;
  margin: 25px 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  max-width: 60%;
}

.podcast-text-container p, h2 {
  margin: 0;
}

.podcast-info-footer {
  display: flex;
  align-items: center;
  max-height: 20px;
  margin-bottom: 10px;
}

.podcast-info-footer * {
  font-size: 13px;
  color: #7a7b7c;
}

.podcast-info-footer span {
  border-left: thin solid #7a7b7c;
  width: 0px;
  height: 15px;
  margin: 0 30px;
}

.sections-wrapper p {
  font-size: 1.125em;
}

.modal-backdrop.show {
  display: block;
}

.modal-backdrop {
  z-index: 30;
  height: 100%;
  margin: -10px;
  padding: 10px;
  width: 100%;
  background-color: #000;
  opacity: .9;
  position: fixed;
  visibility: visible;
  border: 1px solid red;
  display: none;
}

.modal-backdrop .backdrop-list a {
 text-decoration: none;
}

.modal-backdrop .btn {
  position: absolute;
  right: 200px;
  top: 50px;
  background: none;
  border: none;
  color: white;
  font-size: 45px;
}

.modal-backdrop .btn:hover {
  cursor: pointer;
}

.modal-backdrop ul {
  display: flex;
  flex-direction: column;
  height: 100%;
  align-items: center;
  justify-content: center;
  margin-top: -150px;
}

.modal-backdrop li {
  font-size: 40px;
  list-style-type: none;
  color: white;
}

</style>

<script>
const onClickHamburger = () => {
  const nav = this.document.getElementById('nav-backdrop');
  nav.classList.add('show');
}

const onClickCross = () => {
  const nav = this.document.getElementById('nav-backdrop');
  nav.classList.remove('show');
}

</script>

<div class="body-wrapper">
  <div class="modal-backdrop" id="nav-backdrop">
    <button class="btn btn-default" onclick="onClickCross()">X</button>
    <ul class="backdrop-list">
      <% if current_user%>
        <a href="/podcasts/new"><li>New podcast</li></a>
        <a href="/users/sign_out"><li>Logout</li></a>
      <% else %>
        <a href="/users/sign_in"><li>Login</li></a>
        <a href="/users/sign_up"><li>Sign Up</li></a>
      <% end %>
    </ul>
  </div>
  <div class="home-container">
    <nav class="top-nav">
      <div class="title-wrapper">
        <h1>LatamPodcast</h1>
        <p class="subtitle">Un simple listado con los mejores podcast latinoamericanos en espa√±ol.</p>
      </div>
      <div>
        <button class="burger-button" id="burger-button" onclick="onClickHamburger()">
          <span class="burger-span"></span>
          <span class="burger-span"></span>
        </button>
      </div>
    </nav>
    <div class="podcast-wrapper">
      <%= render 'podcast-card' %>
    </div>
    <div class="sections-wrapper">
      <%= render 'sections' %>
      <%= render 'subsections' %>
    </div>
  </div>
</div>